@model AgrInov.Models.Imagem

@{
    ViewData["Title"] = "Create";
}

<h1 class="fs-3 mb-5">Imagem â†’ Cadastro</h1>

<div class="mb-5">
    <div class="agr-card p-5">
        <form asp-action="Create" enctype="multipart/form-data" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" accept=".jpg" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Cadastrar" class="btn btn-dark w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info text-white">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
