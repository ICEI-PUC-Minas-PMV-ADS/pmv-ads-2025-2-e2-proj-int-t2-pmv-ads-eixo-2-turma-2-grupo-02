@model AgrInov.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fs-3 mb-5">Gerenciar Usuários → Remover</h1>


<div class="mb-5">
    <div class="agr-card p-5">
    <div class="mb-3">
        <h3 class="mb-0">Deseja remover este usuário?</h3>
        <span class="fs-6">Essa ação não poderá ser desfeita</span>
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
    </div>
</div>

<div class="d-flex justify-content-start gap-1">
    <a asp-action="Index" class="btn btn-info text-white">Voltar</a>
</div>
