@model IEnumerable<AgrInov.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fs-3">Gerenciar Usuários</h1>

<div class="d-flex justify-content-between align-items-center gap-2 my-4">
    <form class="d-flex" role="search">
        <div class="input-group">
            <input type="search" class="form-control border-end-0" placeholder="Buscar" aria-label="Buscar">
            <span class="input-group-text bg-white border-start-0">
                <i class="fas fa-search"></i>
            </span>
        </div>
    </form>
    <a asp-action="Create" class="btn btn-dark">+ Cadastrar novo usuário</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Atualizar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Visualizar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
