@model AgrInov.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1 class="fs-3 mb-5">Gerenciar Usuários → Detalhes</h1>

<div class="d-flex justify-content-end align-items-center gap-2 my-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark">Editar</a>
</div>

<div class="mb-5">
    <div class="agr-card p-5">
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Matricula)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Matricula)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cargo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cargo.Nome)
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-start gap-1">
    <a asp-action="Index" class="btn btn-info text-white">Voltar</a>
</div>
