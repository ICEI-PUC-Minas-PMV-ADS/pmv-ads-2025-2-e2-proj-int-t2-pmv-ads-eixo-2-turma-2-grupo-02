@model AgrInov.Models.Cultura

@{
    ViewData["Title"] = "Delete";
}

<style>
    .Remover{
        margin-top: 100px;
        text-align:center;
    }

    .btn{
        margin:15px;
    }
</style>



<div class="Remover">
    <h3>Deseja remover a cultura @Html.DisplayFor(model => model.Nome)?</h3>
    <p>Esta ação não poderá ser desfeita</p>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Sair</a> 
        <input type="submit" value="Confirmar" class="btn btn-dark" />
    </form>
</div>
