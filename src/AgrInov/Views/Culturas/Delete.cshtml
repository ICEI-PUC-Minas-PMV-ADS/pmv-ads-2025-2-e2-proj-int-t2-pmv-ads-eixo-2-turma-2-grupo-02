@model AgrInov.Models.Cultura

@{
    ViewData["Title"] = "Excluir Cultura";
}

<h1 class="fs-3 mb-5">Culturas → Remover</h1>


<h3>Tem certeza de que deseja excluir esta cultura?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index">Voltar </a> |
        <input type="submit" value="Remover" class="btn btn-danger" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </form>
</div>