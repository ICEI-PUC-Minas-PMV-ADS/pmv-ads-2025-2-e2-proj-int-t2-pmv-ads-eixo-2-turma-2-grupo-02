@model IEnumerable<AgrInov.Models.Cultura>

@{
    ViewData["Title"] = "Index";
}

<h1>Gerenciar Culturas</h1>

<div class="d-flex justify-content-between align-items-center gap-2 my-4">
    <form class="d-flex" role="search">
        <div class="input-group">
            <input type="search" class="form-control border-end-0" placeholder="Buscar" aria-label="Buscar">
            <span class="input-group-text bg-white border-start-0">
                <i class="fas fa-search"></i>
            </span>
        </div>
    </form>
    <a asp-action="Create" class="btn btn-dark">+ Cadastrar cultura</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p class="nome" style="width: 630px;height:45px;padding-top: 10px;">@Html.DisplayFor(modelItem => item.Nome)</p>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" style="margin-right:15px;"><i class="fas fa-edit me-1"></i>Atualizar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
