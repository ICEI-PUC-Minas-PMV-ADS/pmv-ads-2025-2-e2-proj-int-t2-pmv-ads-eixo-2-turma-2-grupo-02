@model IEnumerable<AgrInov.Models.AreaDePlantio>

@{
    ViewData["Title"] = "Áreas de Plantio";
}

<h1 class="fs-3">Gerenciar Áreas de Plantio</h1>

<div class="d-flex justify-content-between align-items-center gap-2 my-4">
    <form class="d-flex" role="search">
        <div class="input-group">
            <input type="search" class="form-control border-end-0" placeholder="Buscar" aria-label="Buscar">
            <span class="input-group-text bg-white border-start-0">
                <i class="fas fa-search"></i>
            </span>
        </div>
    </form>
    <a asp-action="Create" class="btn btn-dark">+ Cadastrar nova área</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DataInicio)</th>
            <th>@Html.DisplayNameFor(model => model.DataFimPrevista)</th>
            <th>@Html.DisplayNameFor(model => model.AreaUtilizada)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.DataInicio)</td>
            <td>@Html.DisplayFor(modelItem => item.DataFimPrevista)</td>
            <td>@Html.DisplayFor(modelItem => item.AreaUtilizada)</td>
            <td>@Html.DisplayFor(modelItem => item.Status)</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Atualizar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Visualizar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>