@model AgrInov.Models.Venda

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fs-3 mb-5">Vendas → Remover</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cultura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cultura.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar </a> |
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
</div>
