@model AgrInov.Models.Imagem

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fs-3 mb-5">Imagem → Remover</h1>


<div class="mb-5">
    <div class="agr-card p-5">
    <div class="mb-3">
        <h3 class="mb-0">Deseja remover esta Imagem?</h3>
        <span class="fs-6">Essa ação não poderá ser desfeita</span>
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
         <dd class="col-sm-8">
        @{
            string blobUrl = $"https://agrinovimg.blob.core.windows.net/agrinovimg/{Model.ImageUrl}.jpg";
        }
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@blobUrl" alt="Imagem" class="img-thumbnail mb-3" style="max-height: 300px;" />
        }
        </dd>
        
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
    </div>
</div>

<div class="d-flex justify-content-start gap-1">
    <a asp-action="Index" class="btn btn-info text-white">Voltar</a>
</div>
