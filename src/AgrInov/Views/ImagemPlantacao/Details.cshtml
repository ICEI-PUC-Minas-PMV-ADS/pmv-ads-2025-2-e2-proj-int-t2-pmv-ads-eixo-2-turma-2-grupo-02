@model AgrInov.Models.ImagemPlantacaoViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="fs-3 mb-5">Imagem Plantacao → Detalhes </h1>

<div class="mb-5">
    <div class="agr-card p-5">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">

                    <dt class="col-sm-4">Imagem</dt>
                    <dd class="col-sm-8">
                        @{
                            string blobUrl = $"https://agrinovimg.blob.core.windows.net/agrinovimg/{Model.Imagem.ImageUrl}.jpg";
                        }
                        <img src="@blobUrl" class="img-fluid" />
                    </dd>

                    <dt class="col-sm-4">Plantação</dt>
                    <dd class="col-sm-8">
                        @Model.Plantacao.Id
                    </dd>

                    <dt class="col-sm-4">Latitude</dt>
                    <dd class="col-sm-8">
                        @Model.Imagem.Latitude.ToString("F6")
                    </dd>

                    <dt class="col-sm-4">Longitude</dt>
                    <dd class="col-sm-8">
                        @Model.Imagem.Longitude.ToString("F6")
                    </dd>

                    <dt class="col-sm-4">Data da Foto</dt>
                    <dd class="col-sm-8">
                        @Model.Imagem.DataCriacao.ToString("dd/MM/yyyy HH:mm:ss")
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-start gap-2">
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
</div>
