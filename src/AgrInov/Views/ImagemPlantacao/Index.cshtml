@model IEnumerable<AgrInov.Models.ImagemPlantacaoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fs-3">Imagens da Plantações</h1>

<div class="d-flex justify-content-between align-items-center gap-2 my-4">

    <a asp-action="Create" class="btn btn-dark">+ Cadastrar Imagem</a>
</div>

<table class="table">
    <thead>
        <tr>
                <th>Imagem</th>
                <th>Plantação</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @{
                string blobUrl = $"https://agrinovimg.blob.core.windows.net/agrinovimg/{item.Imagem.ImageUrl}.jpg";
                }

                @if (!string.IsNullOrEmpty(item.Imagem.ImageUrl))
                {
                    <img src="@blobUrl" alt="Imagem" class="img-thumbnail" style="max-height: 120px;" />
                }
                else
                {
                    <span class="text-muted">Sem imagem</span>
                 }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plantacao.Id)
            </td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@item.Imagem.Id" class="btn btn-info"><i class="fas fa-eye me-1"></i>Visualizar</a>
                <a asp-action="Delete" asp-route-id="@item.Imagem.Id" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
