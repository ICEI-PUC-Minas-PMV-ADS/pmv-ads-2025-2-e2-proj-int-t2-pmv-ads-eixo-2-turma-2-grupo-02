@model AgrInov.Models.Cultura

@{
    ViewData["Title"] = "Editar Cultura";
}

<h1 class="fs-3 mb-5">Culturas → Atualizar</h1>

<div class="mb-5">
    <div class="agr-card p-5">
        <form asp-action="Edit" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Recomendacao" class="control-label"></label>
                <input asp-for="Recomendacao" class="form-control" />
                <span asp-validation-for="Recomendacao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Rotacao" class="control-label"></label>
                <input asp-for="Rotacao" class="form-control" />
                <span asp-validation-for="Rotacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-dark w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info text-white">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}