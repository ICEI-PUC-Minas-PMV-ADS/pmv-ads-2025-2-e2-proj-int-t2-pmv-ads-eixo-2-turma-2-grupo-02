@model AgrInov.Models.Usuario
@{
    ViewData["Title"] = "AgrInov - Cadastro";
    Layout = "_Layout";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="agr-green mb-2">
                            <i class="fas fa-leaf me-2"></i>AgrInov
                        </h1>
                        <h5 class="text-muted">Crie sua conta</h5>
                    </div>

                    @if (ViewBag.Erro != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Erro
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">
                                <i class="fas fa-user me-2"></i>Nome
                            </label>
                            <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite seu nome completo" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Digite seu email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Senha" class="form-label">
                                <i class="fas fa-lock me-2"></i>Senha
                            </label>
                            <input asp-for="Senha" type="password" class="form-control form-control-lg" placeholder="Digite sua senha" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Cadastrar
                        </button>
                    </form>
                    
                    <div class="text-center">
                        <p class="text-muted mb-0">Já tem conta?</p>
                        <a href="@Url.Action("Login", "Auth")" class="text-decoration-none agr-green fw-bold">
                            Faça login aqui
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>