@model AgrInov.Models.Usuario
@{
    ViewData["Title"] = "AgrInov - Cadastro";
    Layout = "_Layout";
}

<style>
    .agrinov-green {
        color: #28a745;
    }
    .btn-success-custom {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
    }
    .btn-success-custom:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }
    .login-modal {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    .modal-content {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 70dvh;
    }
    .modal-header {
        border-bottom: none;
        padding: 2rem 2rem 1rem;
    }
    .modal-body {
        padding: 1rem 2rem 2rem;
    }
</style>

<div class="login-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <div class="w-100">
                    <h1 class="modal-title agrinov-green mb-2">
                        <i class="fas fa-leaf me-2"></i>AgrInov
                    </h1>
                    <h5 class="text-muted">Crie sua conta</h5>
                </div>
            </div>
            <div class="modal-body">
                @if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Erro
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">
                            <i class="fas fa-user me-2"></i>Nome
                        </label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite seu nome completo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email
                        </label>
                        <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Digite seu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Senha" class="form-label">
                            <i class="fas fa-lock me-2"></i>Senha
                        </label>
                        <input asp-for="Senha" type="password" class="form-control form-control-lg" placeholder="Digite sua senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-success-custom btn-lg w-100 mb-3">
                        <i class="fas fa-user-plus me-2"></i>Cadastrar
                    </button>
                </form>
                
                <div class="text-center">
                    <p class="text-muted mb-0">Já tem conta?</p>
                    <a href="@Url.Action("Login", "Auth")" class="text-decoration-none agrinov-green fw-bold">
                        Faça login aqui
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>