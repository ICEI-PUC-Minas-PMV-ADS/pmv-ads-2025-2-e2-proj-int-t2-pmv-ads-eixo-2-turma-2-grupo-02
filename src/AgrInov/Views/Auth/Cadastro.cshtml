@model AgrInov.Models.Usuario
@{
    ViewData["Title"] = "Cadastro";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2>Cadastro</h2>
        
        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger">@ViewBag.Erro</div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Senha">Senha:</label>
                <input asp-for="Senha" type="password" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-success w-100">Cadastrar</button>
        </form>
        
        <div class="text-center mt-3">
            <a href="@Url.Action("Login", "Auth")">Já tem conta? Faça login</a>
        </div>
    </div>
</div>